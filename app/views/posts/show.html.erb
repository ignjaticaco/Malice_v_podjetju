<h1 class='mt-3 text-center'><b><%= @post.title %></b></h1>

<div class='mt-3 text-center'><%= image_tag @post.avatar.url(:medium) %></div>

<div class='mt-2 text-center'><%= @post.body %></div>

<div class='mt-2 text-right'>Datum malice: <b><%= @post.date %></b></div>
<hr>
<div class='mt-2'><%= link_to "Prijava na malico", like_post_path(@post), method: :put, :class => 'btn btn-primary' %>
<%= link_to "Odjava iz malice", dislike_post_path(@post), method: :put, :class => 'btn btn-danger' %></div>

<div class='mt-2'><% if current_admin.voted_up_on? @post %>Na malico <b>ste</b> prijavljeni
<% else %>Na malico <b>niste</b> prijavljeni<% end %></div>

<div class='mt-2'>Na malice sem se prijavil že:  <b><%= current_admin.find_liked_items.size %></b></div>

<div class='mt-4 text-right'><br><%= link_to "Uredi", edit_post_path(@post), :class => 'btn btn-primary' %>
<%= link_to "Izbriši", post_path(@post), 
                        method: :delete,
                        data: {confirm: 'Ali ste prepričani?'},
                        :class => 'btn btn-danger' %></div> 
<hr>

<%= render 'comments/form' %>
<hr>
<%= render 'comments/comments' %>
